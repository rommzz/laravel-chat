{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resource/js/*"],
      // "@components/*": ["resource/js/components/*"],
      // "@assets/*": ["resource/js/assets/*"]
    },
  },
  "include": ["resource/js/**/*.ts", "resource/js/**/*.d.ts", "resource/js/**/*.tsx", "resource/js/**/*.vue", "resource/js/api/index.ts", "resource/js/api/index.ts", "resource/js/api/index.js", "resource/js/api/index.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
